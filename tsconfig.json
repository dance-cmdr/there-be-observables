{
    "version": 3,
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2016",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2015",
            "es2016"
         ],
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "babelOptions": {
            "babelrc": true, 
        },
        "babelCore": "@babel/core",
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "./node_modules/**"
    ]
}