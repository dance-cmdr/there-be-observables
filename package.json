{
  "name": "there-be-observables",
  "version": "1.0.0",
  "description": "An experiment in exploring the limits of reactive programming",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/dance-cmdr/there-be-observables.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "sync-agents": "node scripts/sync-agent-files.cjs"
  },
  "author": "dance-cmdr",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/rx": "^4.1.1",
    "eslint": "^9.0.0",
    "husky": "^1.3.1",
    "jsdom": "^28.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "rxjs": "^6.4.0",
    "three": "^0.103.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node scripts/sync-agent-files.cjs && npm run lint && npm test",
      "pre-push": "npm run lint && npm test"
    }
  }
}
